<resources>
    <!-- CardView Style -->
    <style name="CardViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!-- EditText Style -->
    <style name="EditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">2dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:background">@null</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/gray</item>
    </style>

    <!-- Title Text Style -->
    <style name="TitleTextStyle">
        <item name="android:textColor">@color/minimalistic_green</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Selectable Text Style -->
    <style name="SelectableTextStyle">
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Select Text Style -->
    <style name="SelectTextStyle">
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:textColor">@color/minimalistic_green</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Publish Button Style -->
    <style name="PublishButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:background">@color/minimalistic_black</item>
        <item name="android:textColor">@color/minimalistic_green</item>
    </style>

    <!-- ViewPager Style -->
    <style name="ViewPagerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">200dp</item>
    </style>

    <!-- Image Counter Style -->
    <style name="ImageCounterStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:background">@color/black</item>
        <item name="android:padding">5dp</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <!-- Rounded ImageView Style -->
    <style name="RoundedImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
</resources>
